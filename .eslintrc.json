{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "globals": {
        "require"   : false,
        "module"    : false,
        "global"    : false,
        "process"    : false,
        /* MOCHA */
        "describe"   : false,
        "it"         : false,
        "before"     : false,
        "beforeEach" : false,
        "after"      : false,
        "afterEach"  : false
    },
    "extends": "eslint:recommended",
    "rules": {
        // enable additional rules
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}